<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <title>Bootstrap</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="A markdown-based website">
        <meta name="author" content="A markdown writer">
        <meta name="generator" content="SilexMarkdown">

        <title>{{ 'Homepage' }}</title>

        <link href="{{ app.request.basepath }}/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/assets/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/assets/css/styles.css" rel="stylesheet">

        <!-- Le fav and touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ app.request.basepath }}/assets/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ app.request.basepath }}/assets/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ app.request.basepath }}/assets/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="{{ app.request.basepath }}/assets/ico/apple-touch-icon-57-precomposed.png">
        <link rel="shortcut icon" href="{{ app.request.basepath }}/assets/ico/favicon.png">

        <script src="{{ app.request.basepath }}/assets/modernizr/modernizr.js"></script>
    </head>
    <body>
        <div id="main-container">
            {% include ('common/header.html.twig') %}

            <div id="main" role="main" class="container span8 offset4">

                {% block content %}

                    <h1>Documentation</h1>

                {% endblock %}

            </div>

            {% include ('common/footer.html.twig') %}

        </div> <!--! /#main-container -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ app.request.basepath }}/assets/js/jquery.js/"><\/script>')</script>
        <script src="{{ app.request.basepath }}/assets/js/scripts.js"></script>

    </body>
</html>
